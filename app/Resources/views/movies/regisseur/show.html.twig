{% extends 'base.html.twig' %}

{% block body %}
    <h1>Regisseur</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ regisseur.id }}</td>
            </tr>
            <tr>
                <th>Fullname</th>
                <td>{{ regisseur.fullName }}</td>
            </tr>
            <tr>
                <th>Birthday</th>
                <td>{% if regisseur.birthday %}{{ regisseur.birthday|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_regisseur_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_regisseur_edit', { 'id': regisseur.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
