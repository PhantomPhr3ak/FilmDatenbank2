{% extends 'base.html.twig' %}

{% block body %}
    Status: {{ status }}

    {% for movie in movies %}
        <div class="container bg-light m-3 p-3" style="border-radius: 0.5rem">
            <div class="row">
                <div class="col-9">
                    <h2>{{ movie.name }}</h2>
                    <p>
                    <ul>
                        <li>ID: <strong>{{ movie.id }}</strong></li>
                        <li>Regisseur: <strong>{{ movie.regisseur }}</strong></li>
                        <li>Producer: <strong>{{ movie.producer }}</strong></li>
                        <li>Beschreibung: <strong>{{ movie.description }}</strong></li>
                        <li>Erscheinungsdatum: <strong>{{ movie.date | date('d.m.Y') }}</strong></li>
                    </ul>
                    </p>
                </div>
                <div class="col-3">
                    <button class="btn btn-warning my-2" data-toggle="collapse" data-target="#comments-{{ movie.id }}" aria-expanded="false" aria-controls="collapse{{ movie.id }}">Kommentare anzeigen</button><br>
                    {% if is_granted('ROLE_ADMIN') %}
                        <button class="btn btn-secondary my-2 text-white" href="" disabled>Kommentar schreiben</button>
                    {% elseif is_granted('ROLE_USER') %}
                        <a class="btn btn-secondary my-2 text-white" href="{{ path('user_new_comment', {id: movie.id}) }}">Kommentar schreiben</a>
                    {% endif %}
                    </div>
            </div>
            <div class="row">
                <div class="collapse" id="comments-{{ movie.id }}" style="width: 100%">
                    <div class="col-12" style="width: 100%">
                        <h2>Comments</h2><br>
                        <div class="container-fluid">
                            <!-- Auslesen aller Kommentare -->
                            {% for comment in movie.comments %}
                                <div class="row p-3 m-2 bg-white rounded">
                                    <div class="col-3">
                                        {{ comment.author.username }} <br> at {{ comment.date | date('Y-m-d H:i:s') }}
                                    </div>
                                    <div class="col-9">
                                        <p>
                                        {{ comment.text }}
                                        </p>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
{% endblock %}